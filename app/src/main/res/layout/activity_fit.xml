<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".View.FitActivity">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            tools:ignore="MissingConstraints">
        </FrameLayout>

        <ImageView
            android:id="@+id/dividerfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_container"
            android:src="@drawable/fit_divider3">
        </ImageView>

        <FrameLayout
            android:id="@+id/fragment_container2"
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:layout_below="@id/dividerfit">
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/fragment_container2"
            >
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:background="?cardbackground"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Begin Workout"
                android:onClick="startWorkout"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:background="?cardbackground"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:onClick="changePlan"
                android:text="Update Plan"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:background="?cardbackground"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="My Health"
                android:textColor="#FFF"/>
        </LinearLayout>

</RelativeLayout>