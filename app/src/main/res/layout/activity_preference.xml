<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".View.ThemeActivity">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </View>

    <TextView
        android:id="@+id/selected_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Select Your Theme\n You can always change this later in settings."
        android:textColor="#FFF"
        android:lineSpacingExtra="6dp"
        android:textSize="28sp"
        android:textAlignment="center"/>


    <LinearLayout
        android:id="@+id/themeSelectLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:background="#1F3949"
        android:gravity="center_vertical"
        android:layout_below="@+id/selected_info_tv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selected_theme_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="0.3"
            android:background="?attr/colorPrimaryDark"
            android:gravity="center"
            android:text="Default Theme"
            android:textColor="#FFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/defaultBtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Default"
                    android:layout_margin="8dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="#00000000"
                    android:src="@drawable/defaultthemeselected2"/>

                <ImageButton
                    android:id="@+id/lightBtn"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="Light Theme"
                    android:layout_margin="8dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="#00000000"
                    android:src="@drawable/lighttheme"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/darkBtn"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="Dark Theme"
                    android:layout_margin="8dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="#00000000"
                    android:src="@drawable/darktheme"/>

                <ImageButton
                    android:id="@+id/yellowBtn"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="Yellow Theme"
                    android:layout_margin="8dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="#00000000"
                    android:src="@drawable/yellowtheme"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:text="Start"
        android:textSize="44sp"
        android:textStyle="bold"
        android:background="?cardbackground"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>